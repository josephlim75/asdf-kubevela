#!/usr/bin/env sh

set -e
set -o pipefail

install_kubevela() {
  local install_type=$1
  local version=$2
  local install_path=$3
  local platform="$(uname | tr '[:upper:]' '[:lower:]')-amd64"
  local bin_install_path="$install_path/bin"
  local download_url=$(get_download_url $version $platform)
  local bin_path="${bin_install_path}/kubectl-vela"

  mkdir -p "${bin_install_path}" "/usr/local/bin"

  echo "Downloading kubevela from ${download_url}"
  curl -sSL "$download_url" -o "${install_path}/kubevela.tar.gz"
  tar xzf "${install_path}/kubevela.tar.gz" -C "${install_path}"
  mv ${install_path}/${platform}/* ${install_path}/bin
  ln -sf ${install_path}/bin/kubectl-vela ${install_path}/bin/vela
  ln -sf ${install_path}/bin/kubectl-vela ${install_path}/bin/kubevela
  chmod +x "${install_path}/bin"
  rm -rf "${install_path}/kubevela.tar.gz" "${install_path}/${platform}"
  echo "Kubevela version ${version} has been successfully installed."
}

get_download_url() {
  local version="$1"
  local platform="$2"
  echo "https://github.com/oam-dev/kubevela/releases/download/${version}/kubectl-vela-${version}-${platform}.tar.gz"
}

install_kubevela $ASDF_INSTALL_TYPE $ASDF_INSTALL_VERSION $ASDF_INSTALL_PATH